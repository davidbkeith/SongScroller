<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:theme="@style/MyActionBar"
    app:popupTheme="@style/MyActionBar">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textBPMeasure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beats/Measure: "
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editBPMeasure"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/textBPMeasure"
            app:layout_constraintStart_toEndOf="@+id/textBPMeasure"
            app:layout_constraintTop_toTopOf="@+id/textBPMeasure" />

        <TextView
            android:id="@+id/textPBM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text=" BPM: "
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textBPMeasure" />

        <EditText
            android:id="@+id/editBPM"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:text="0"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/textPBM"
            app:layout_constraintStart_toEndOf="@+id/textPBM"
            app:layout_constraintTop_toTopOf="@+id/textPBM" />

        <TextView
            android:id="@+id/textBPL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:text="Beats/Line: "
            android:textSize="12dp"
            app:layout_constraintStart_toEndOf="@+id/editBPMeasure" />

        <EditText
            android:id="@+id/editBeatsPerLine"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:selectAllOnFocus="true"
            android:text="0"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/textBPL"
            app:layout_constraintStart_toEndOf="@+id/textBPL"
            app:layout_constraintTop_toTopOf="@+id/textBPL" />

        <TextView
            android:id="@+id/textStartLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Start Line:"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/editBPM"
            app:layout_constraintStart_toEndOf="@+id/editBPM"
            app:layout_constraintTop_toTopOf="@+id/editBPM" />

        <EditText
            android:id="@+id/editStartLine"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:text="0"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/textStartLine"
            app:layout_constraintStart_toEndOf="@+id/textStartLine"
            app:layout_constraintTop_toTopOf="@+id/textStartLine" />

        <TextView
            android:id="@+id/textBPChord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Beats/Chord"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/editStartLine"
            app:layout_constraintStart_toEndOf="@+id/editStartLine"
            app:layout_constraintTop_toTopOf="@+id/editStartLine" />

        <EditText
            android:id="@+id/editBPChord"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="0.0"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/textBPChord"
            app:layout_constraintStart_toEndOf="@+id/textBPChord"
            app:layout_constraintTop_toTopOf="@+id/textBPChord" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.Toolbar>
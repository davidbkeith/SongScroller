<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="CustomToolbarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarSize">10dp</item>
        <item name="colorAccent">@color/colorTitleBar</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="actionBarSize">40dp</item>
        <item name="android:background">@color/colorMenuBarLight</item>
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
        <item name="actionButtonStyle">@style/myActionButtonStyle</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorAccentLight</item>
    </style>

    <style name="myActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">24dp</item>
        <item name="android:maxWidth">25dp</item>
        <item name="android:width">25dp</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>


